# baseURI: http://www.w3.org/ns/shacl/test/features/core/recursive-004

@prefix ex: <http://example.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<>
	a sh:Graph ;
	sh:shapesGraph <http://www.w3.org/ns/shacl> ;
	rdfs:comment "Based on Arthur's document https://github.com/agryman/data-shapes/blob/master/recursion/recursion-v2-changebars.pdf" ;
.

# Shapes ----------------------------------------------------------------------

ex:Associate
	a sh:Shape ;
	sh:property [
		sh:predicate ex:name ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:datatype xsd:string ;
	] ;
	sh:inverseProperty [
		sh:predicate ex:knows ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:class ex:Person ;
		sh:valueShape ex:Contact ;
	] ;
.

ex:Contact
	a sh:Shape ;
	sh:property [
		sh:predicate ex:name ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:datatype xsd:string ;
	] ;
	sh:property [
		sh:predicate ex:knows ;
		sh:class ex:Person ;
		sh:valueShape ex:Associate ;
	] ;
.

ex:Person
	a rdfs:Class ;
	rdfs:subClassOf rdfs:Resource ;
.

# Instances -------------------------------------------------------------------

ex:Alice
	a ex:Person ;
	sh:nodeShape ex:Contact ;
	ex:name "Alice" ;
	ex:knows ex:Bob ;
	ex:knows ex:Charlie ;
.


ex:Bob
	a ex:Person ;
	ex:name "Bob" ;
.

ex:Charlie
	a ex:Person ;
	ex:name "Charlie" ;
.

# baseURI: http://www.w3.org/ns/shacl/test/features/core/valueShape-001

@prefix ex: <http://example.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<>
	a sh:Graph ;
	sh:shapesGraph <http://www.w3.org/ns/shacl> ;
.


# Shapes ----------------------------------------------------------------------

ex:Issue
	a sh:ShapeClass ;
	rdfs:subClassOf rdfs:Resource ;
	rdfs:label "Issue" ;
  	sh:property [
		sh:predicate ex:submittedBy ;
		sh:class ex:Person ;
		sh:minCount 1 ;
		rdfs:label "submitted by" ;
    ] ;
	sh:property [
		sh:predicate ex:assignedTo ;
      	sh:valueClass ex:Person ;
		sh:valueShape [
			rdfs:comment "All assignees must have an email and a last name." ;
			sh:property [
				sh:predicate ex:email ;
				sh:minCount 1 ;
				sh:maxCount 1 ;
			] ;
			sh:property [
				sh:predicate ex:lastName ;
				sh:minCount 1 ;
				sh:maxCount 1 ;
			] ;
		] ;
      	rdfs:label "assigned to" ;
    ] ;
.

ex:Person
	a sh:ShapeClass ;
	rdfs:subClassOf rdfs:Resource ;
	rdfs:label "Person"^^xsd:string ;
	sh:property [
		sh:predicate ex:firstName ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:datatype xsd:string ;
		rdfs:label "first name" ;
	] ;
	sh:property [
		sh:predicate ex:email ;
		ex:datatype xsd:string ;
		rdfs:label "email" ;
	] ;
	sh:property [
		sh:predicate ex:lastName ;
		sh:datatype xsd:string ;
		rdfs:label "last name" ;
	] ;
.


# Instances -------------------------------------------------------------------

ex:Anon
	a ex:Person ;
	ex:firstName "Anon" ;
.

ex:JohnDoeWithEmail
	a ex:Person ;
	ex:email "john@doe.com" ;
	ex:firstName "John" ;
  	ex:lastName "Doe" ;
.

# Invalid: ex:assignedTo needs to be ex:JohnDoeWithEmail 
ex:Issue_1
	a ex:Issue ;
	ex:assignedTo ex:Anon ;
	ex:submittedBy ex:Anon ; 
	rdfs:label "Issue 1" ;
.

# Valid
ex:Issue_2
	a ex:Issue ;
	ex:assignedTo ex:JohnDoeWithEmail ;
	ex:submittedBy ex:Anon ; 
	rdfs:label "Issue 2" ;
.

@prefix dc:     <http://purl.org/dc/elements/1.1/> .
@prefix ex:     <http://example.org/> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix mf:     <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh:     <http://www.w3.org/ns/shacl#> .
@prefix sht:    <http://www.w3.org/ns/shacl/test-suite#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
 
<>
	a mf:Manifest ;
	rdfs:comment "Tests of SPARQL features" ;
	rdfs:label "SPARQL Features tests" ;
	mf:entries ( 
		<global-001> 
		<template-001> 
	)
.

<global-001>
	a sht:Validate ;
	mf:name "Test for a SPARQL constraint attached to the graph resource" ;
	mf:action [
		sht:schema <global-001.ttl> ; 
		sht:data <global-001.ttl> ; 
	] ;
	mf:result [
		a sh:Error ;
  		sh:root rdfs:Resource ;
	] ;
	mf:status sht:proposed ; 
.

<template-001>
	a sht:Validate ;
	mf:name "Test for a template" ;
	mf:action [
		sht:schema <template-001.ttl> ; 
		sht:data <template-001.ttl> ; 
	] ;
	mf:result [
		a sh:Error ;
  		sh:root ex:InvalidInstance1 ;
  		sh:subject ex:InvalidInstance1 ;
  		sh:predicate rdfs:label ;
  		sh:object "English"@en ;
	] ;
	mf:result [
		a sh:Error ;
  		sh:root ex:InvalidInstance1 ;
  		sh:subject ex:InvalidInstance1 ;
  		sh:predicate rdfs:label ;
  		sh:object "British"@en ;
	] ;
	mf:result [
		a sh:Error ;
  		sh:root ex:InvalidInstance2 ;
  		sh:subject ex:InvalidInstance2 ;
  		sh:predicate rdfs:label ;
  		sh:object "English"@en ;
	] ;
	mf:result [
		a sh:Error ;
  		sh:root ex:InvalidInstance2 ;
  		sh:subject ex:InvalidInstance2 ;
  		sh:predicate rdfs:label ;
  		sh:object "British"@en ;
	] ;
	mf:status sht:proposed ; 
.

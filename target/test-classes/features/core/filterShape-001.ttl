# baseURI: http://www.w3.org/ns/shacl/test/features/core/filterShape-001

@prefix ex: <http://example.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<>
	a sh:Graph ;
	sh:shapesGraph <http://www.w3.org/ns/shacl> ;
.

# Shapes ----------------------------------------------------------------------

ex:Person
	a rdfs:Class ;
	rdfs:subClassOf rdfs:Resource ;
.

ex:PersonShape
	a sh:Shape ;
	sh:scopeClass ex:Person ;
	sh:property [
		sh:predicate ex:gender ;
		sh:allowedValues ( "male" "female" ) ;
	] ;
	sh:property [
		a sh:PropertyConstraint ;
		sh:predicate ex:child ;
		sh:valueClass ex:Person ;
	] ;
	sh:property [
		a sh:PropertyConstraint ;
		sh:filterShape [
			sh:property [
				sh:predicate ex:gender ;
				sh:hasValue "male" ;
			]
		] ;
		sh:predicate ex:child ;
		sh:maxCount 0 ;
	] ;
.

# Instances -------------------------------------------------------------------

ex:ValidInstance1
	a ex:Person ;
	ex:gender "female" ;
	ex:child ex:InvalidInstance1 ;
.

ex:InvalidInstance1
	a ex:Person ;
	ex:gender "male" ;
	ex:child ex:ValidInstance1 ;
.

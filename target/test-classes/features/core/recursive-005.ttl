# baseURI: http://www.w3.org/ns/shacl/test/features/core/recursive-005

@prefix ex: <http://example.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<>
	a sh:Graph ;
	sh:shapesGraph <http://www.w3.org/ns/shacl> ;
.

# Shapes ----------------------------------------------------------------------

ex:sh
	a sh:Shape ;
	sh:constraint [
		a sh:NotConstraint ;
		sh:shape [
			a sh:Shape ;
			sh:property [
				sh:predicate ex:p ;
				sh:valueShape ex:sh ;
			]
		]
	] ;
.

ex:sha
	a sh:Shape ;
	sh:constraint [
		a sh:OrConstraint ;
		sh:shapes (
			[
				a sh:Shape ;
				sh:property [
					sh:predicate ex:q ;
					sh:valueShape ex:sh ;
				] ;
			]
			[
				a sh:Shape ;
				sh:property [
					sh:predicate ex:r ;
					sh:valueShape ex:sh ;
				] ;
			]
		)
	] ;
.

# Instances -------------------------------------------------------------------

ex:a ex:q ex:x .
ex:a ex:r ex:y .
ex:x ex:p ex:y .
ex:y ex:p ex:x .

ex:a sh:nodeShape ex:sha .
